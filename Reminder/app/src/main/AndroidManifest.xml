<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sarah.nci.ie.reminder">

    <!--Gain specific user permissions-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_reminder"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_reminder"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--START-->
        <activity
            android:name=".Activity_Splash"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--START-->
        <activity android:name=".Activity_Main" />
        <activity android:name=".Activity_RegisterDevice" />
        <activity
            android:name=".Dialog_MainDialog"
            android:theme="@style/AppTheme.SubjectDialogCustomTheme" />
        <activity android:name=".Dialog_RemoteControl" />
        <activity android:name=".Dialog_RemoveDevice" />
        <activity android:name=".Action_Photo" />
        <activity android:name=".Action_Gallery" />

        <!-- Scan QR code -->
        <activity android:name=".Activity_Scan_QR_Code" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Dialog_CurrentLocation"
            android:label="@string/title_activity_dialog__current_location" />
        <activity android:name=".Dialog_Connect"></activity>




    </application>

</manifest>